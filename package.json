{
  "name": "ai-flow",
  "version": "1.0.0",
  "description": "AI Flow - 全栈Monorepo项目",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "eslint .",
    "setup": "node scripts/setup.js",
    "install:all": "pnpm install",
    "add": "pnpm add",
    "add:common": "pnpm --filter @ai-flow/common add",
    "add:auth": "pnpm --filter @ai-flow/auth add",
    "add:lexical": "pnpm --filter @ai-flow/lexical-ui add",
    "add:web-pc": "pnpm --filter @ai-flow/web-pc add",
    "add:web-mobile": "pnpm --filter @ai-flow/web-mobile add",
    "add:gateway": "pnpm --filter @ai-flow/gateway add",
    "add:agent": "pnpm --filter @ai-flow/agent-core add",
    "add:dev": "pnpm add -D",
    "add:dev:common": "pnpm --filter @ai-flow/common add -D",
    "add:dev:auth": "pnpm --filter @ai-flow/auth add -D",
    "add:dev:lexical": "pnpm --filter @ai-flow/lexical-ui add -D",
    "add:dev:web-pc": "pnpm --filter @ai-flow/web-pc add -D",
    "add:dev:web-mobile": "pnpm --filter @ai-flow/web-mobile add -D",
    "add:dev:gateway": "pnpm --filter @ai-flow/gateway add -D",
    "add:dev:agent": "pnpm --filter @ai-flow/agent-core add -D",
    "add:pkg": "node scripts/add-package.js"
  },
  "keywords": ["ai", "langchain", "monorepo", "graphql"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.43.1",
    "eslint": "^8.56.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "typescript": "^5.3.3",
    "vitest": "^0.34.6",
    "vite": "^5.0.0",
    "@types/node": "^22.13.10",
    "tailwindcss": "^3.3.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-router": "^5.1.18"
  }
}
